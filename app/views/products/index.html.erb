<% @products.each do |product| %>
  <div class="product">
    <%= product.name %> | <%= number_to_currency product.price %>
    <%= form_for @cart do |f| %>
      <%= f.hidden_field :product_id, value: product.id %>
      <%= f.number_field :quantity %>
      <%= f.submit "Add to cart" %>
    <% end %>
  </div>
<% end %>
