<div class="row">
  <div class="col-sm-6">
    <img src="<%= @product.image %>" class="product-detail">
  </div>
  <div class="col-sm-6">
    <h1><%= @product.name %></h1>
    <p><%= @product.description %></p>
    <%= form_for @cart do |f| %>
    <%= f.hidden_field :product_id, value: @product.id %>
    <%= f.number_field :quantity, placeholder: "Quantity" %>
    <%= f.submit "Add to cart", class: "cart" %>


    <% end %>
  </div>
</div>
